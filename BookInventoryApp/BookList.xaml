<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookInventoryApp.BookList"
             Title="Lilith's Library" BackgroundColor="Black">

    <Grid>
        <StackLayout Padding="20,20,20,20">
            <Button Text="Add"
                    Clicked="OnAddBookClicked"
                    HorizontalOptions="End" 
                    BackgroundColor="Transparent" 
                    BorderColor="#90CAF9" 
                    Shadow="0 0 12 AliceBlue 1" />


            <ListView x:Name="BooksView" 
                      SelectionMode="Single" 
                      RowHeight="100" 
                      ItemSelected="BooksView_ItemSelected"  BackgroundColor="Transparent">
            </ListView>


            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button x:Name="PreviousButton" Text="Previous"
                       Clicked="OnPreviusClicked"
                       HorizontalOptions="Start" 
                       Margin="10,10,10,10"/>
                <Button x:Name="NextButton" Text="Next"
                       Clicked="OnNextClicked"
                       HorizontalOptions="End"
                       Margin="10,10,10,10"/>
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
