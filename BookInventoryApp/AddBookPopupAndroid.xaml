    x:Class="BookInventoryApp.BookPopupAndroid"
    Size="{OnIdiom Phone='380,500', Tablet='400,650', Desktop='640,720'}" Color="Transparent">
    <Border Stroke="#1da6ca" StrokeThickness="2" StrokeShape="RoundRectangle 20" BackgroundColor="#0b121d" WidthRequest="380" HeightRequest="600">
        <ScrollView VerticalScrollBarVisibility="Always">

            <VerticalStackLayout Padding="10" Spacing="10"  WidthRequest="380" HeightRequest="600">

                <!-- Step Progress Bar -->
