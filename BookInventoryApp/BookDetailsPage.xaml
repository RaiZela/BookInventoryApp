<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookInventoryApp.BookDetailsPage"
             Title="Book Details"
             BackgroundColor="#121212">
    <Grid x:Name="MainLayout">
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

                <!-- Book Title -->
                <Frame BorderColor="#1da6ca" BackgroundColor="Black" CornerRadius="10" Padding="15">
                    <Label 
                    x:Name="BookTitleLabel"
                    FontSize="28"
                    Text="{Binding Title}"
                    FontAttributes="Bold"
                    TextColor="White"
                    HorizontalTextAlignment="Center" />
                </Frame>

                <Frame BorderColor="Gray" BackgroundColor="Black" CornerRadius="10" Padding="15">
                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <VerticalStackLayout Spacing="10" Grid.Column="0">
                            <Label Text="Authors" TextColor="LightGray" FontSize="14" />
                            <Label x:Name="BookAuthorsLabel" Text="{Binding Authors}" TextColor="White" FontSize="18" />

                            <Label Text="Categories" TextColor="LightGray" FontSize="14" />
                            <Label x:Name="BookCategoriesLabel" Text="{Binding Categories}" TextColor="White" FontSize="18"/>
                            <Label Text="Type" TextColor="LightGray" FontSize="14" />
                            <Label x:Name="BookTypeLabel" Text="{Binding Type}" TextColor="White" FontSize="18" />

                            <Label Text="Languages" TextColor="LightGray" FontSize="14" />
                            <Label x:Name="BookLanguagesLabel" Text="{Binding Languages}" TextColor="White" FontSize="18" />

                            <Label Text="Status" TextColor="LightGray" FontSize="14" />
                            <Label x:Name="BookStatusLabel" Text="{Binding Status}" TextColor="White" FontSize="18" />

                        </VerticalStackLayout>

                        <VerticalStackLayout Grid.Column="1">
                            <Image Source="icon.png" VerticalOptions="Center" HorizontalOptions="Center"
                                   MaximumHeightRequest="500"
                                   MaximumWidthRequest="500">
                            </Image>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>

                <HorizontalStackLayout HorizontalOptions="End">
                    <Button x:Name="EditButton"
                        BorderColor="#1da6ca"
                        TextColor="White"
                        Text="Edit"
                        MaximumWidthRequest="100"
                        Margin="10,10,10,10"
                        MaximumHeightRequest="90"
                        Padding="20,5,20,5"
                        Background="Transparent"
                        HorizontalOptions="End"
                        Clicked="EditButtonClicked"/>

                    <Button x:Name="DeleteButton"
                        BackgroundColor="red"
                        TextColor="White"
                        Text="Delete"
                        Margin="10,10,10,10"
                        MaximumWidthRequest="100"
                        HorizontalOptions="End"
                        Clicked="DeleteButton_Clicked"/>

                </HorizontalStackLayout>
            </VerticalStackLayout>

        </ScrollView>
        <!-- Success Overlay -->
        <Grid x:Name="SuccessOverlay"
              BackgroundColor="#80000000" 
              IsVisible="False"
              Opacity="0"
              ZIndex="10"
              HorizontalOptions="Fill"
              VerticalOptions="Fill">

            <Label x:Name="SuccessIcon"
                   Text="✅"
                   FontSize="64"
                   Opacity="0"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   ZIndex="10"/>
        </Grid>

        <Grid x:Name="ErrorOverlay"
      BackgroundColor="#80000000"  
            IsVisible="False"
      Opacity="0"
      ZIndex="10"
      HorizontalOptions="Fill"
      VerticalOptions="Fill">

            <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                <Label x:Name="ErrorIcon"
                       Text="❌"
                       FontSize="18"
                       TextColor="White"
                       HorizontalOptions="Center"/>
                <Label x:Name="ErrorMessage"
                      Text="Something went wrong!"
                      FontSize="18"
                      TextColor="White"
                      HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

    </Grid>
</ContentPage>
