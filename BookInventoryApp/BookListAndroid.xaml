<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookInventoryApp.BookListAndroid"
             Title="Lilith's Library">

    <Grid Background="Black">
        <StackLayout Padding="20,20,20,20">
            <Button Text="Add New Book"
         Clicked="OnAddBookClicked"
         HorizontalOptions="End" BackgroundColor="Transparent" BorderColor="#90CAF9" Shadow="0 0 12 AliceBlue 1" />

            <ListView x:Name="BooksView"
                      HasUnevenRows="True"
                      SeparatorVisibility="None"
                      BackgroundColor="#121212" ItemTapped="BooksView_ItemTapped" SelectionMode="None">    

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Grid Margin="10" 
                                      Padding="10"
                                      RowSpacing="0"
                                      ColumnSpacing="15">   

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Image Source="{Binding CoverImage}"
                                           Aspect="AspectFill"
                                           HeightRequest="100"
                                           WidthRequest="70"
                                           VerticalOptions="Center"
                                           Grid.Column="0"/>

                                    <StackLayout Grid.Column="1"
                                                 VerticalOptions="Center"
                                                 Spacing="4">   

                                        <Label Text="{Binding Title}"
                                               FontAttributes="Bold"
                                               FontSize="16"
                                               TextColor="White"
                                               LineBreakMode="TailTruncation"/> 

                                        <Label Text="{Binding Authors}"
                                               FontSize="14"
                                               TextColor="LightGray"/>  

                                        <Label Text="{Binding Categories}"
                                               FontSize="12"
                                               FontFamily="VictorMono-BoldItalic"
                                               TextColor="Grey"/>

                                        <Label Text="{Binding Languages}"
                                               FontFamily="VictorMono-BoldItalic"
                                               FontSize="12"
                                               TextColor="Grey"/>   
                                    </StackLayout>
                                </Grid>
                                <BoxView HeightRequest="1"
                                         Color="#444"
                                         HorizontalOptions="Fill"
                                         Margin="20,0" />

                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>



            <StackLayout Orientation="Horizontal" HorizontalOptions="End">
                <Button x:Name="PreviousButton" 
                       Clicked="OnPreviusClicked"
                       HorizontalOptions="Start" />
                <Button x:Name="NextButton" 
                       Text="Next"
                       Clicked="OnNextClicked"
                       HorizontalOptions="End" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
