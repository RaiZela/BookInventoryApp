<toolkit:Popup
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="BookInventoryApp.AddAuthorPopup"
               CanBeDismissedByTappingOutsideOfPopup="True">

    <StackLayout Padding="20" BackgroundColor="White" WidthRequest="300">
        <Entry Placeholder="Name" x:Name="Name"/>
        <Entry Placeholder="MiddleName" x:Name="MiddleName"/>
        <Entry Placeholder="LastName" x:Name="LastName"/>
        <Button Text="Save" Clicked="OnSaveClicked"/>
    </StackLayout>

</toolkit:Popup>
