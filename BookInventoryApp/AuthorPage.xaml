<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookInventoryApp.AuthorPage"
             Title="Author">
    <StackLayout Padding="20">
        <Button Text="Add New Author" Clicked="OnAddAuthorClicked"/>
        <CollectionView x:Name="AuthorsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout  Padding="10">
                        <Label Text="{Binding Name}" FontAttributes="Bold" Padding="10"/>
                        <Label Text="{Binding MiddleName}" FontAttributes="Bold" Padding="10"/>
                        <Label Text="{Binding LastName}" FontAttributes="Bold" Padding="10"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
