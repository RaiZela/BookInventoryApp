<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookInventoryApp.AuthorPage"
             Title="Author">
    <Grid>
        <Image
        Aspect="AspectFill"
        Opacity="0.5"
        IsEnabled="False">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android" Value="background_image_library_author.jpg" />
                    <On Platform="WinUI" Value="background_image_library_author.jpg" />
                </OnPlatform>
            </Image.Source>
        </Image>
        <StackLayout Padding="20">
            <Button Text="Add New Author" Clicked="OnAddAuthorClicked" HorizontalOptions="End"/>
            <CollectionView x:Name="AuthorsView" VerticalScrollBarVisibility="Always">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <HorizontalStackLayout  Padding="10">
                            <Label Text="{Binding Name}" FontAttributes="Bold" Padding="10"/>
                            <Label Text="{Binding MiddleName}" FontAttributes="Bold" Padding="10"/>
                            <Label Text="{Binding LastName}" FontAttributes="Bold" Padding="10"/>
                        </HorizontalStackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

    </Grid>
</ContentPage>
