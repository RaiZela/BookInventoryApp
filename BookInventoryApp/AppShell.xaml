<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BookInventoryApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BookInventoryApp"
    Shell.FlyoutBehavior="Flyout"
    Title="BookInventoryApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
    Title="Authors"
    ContentTemplate="{DataTemplate local:AuthorPage}"
    Route="AuthorPage" />

    <ShellContent
   Title="Categories"
   ContentTemplate="{DataTemplate local:CategoryPage}"
   Route="CategoryPage" />

    <ShellContent
   Title="Languages"
   ContentTemplate="{DataTemplate local:LanguagePage}"
   Route="LanguagePage" />

    <ShellContent
   Title="Persons"
   ContentTemplate="{DataTemplate local:PersonsPage}"
   Route="PersonsPage" />

</Shell>
