<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookInventoryApp.CategoryPage"
             Title="Categories"
             BackgroundColor="#121212">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Button Text="Add New Category"
              Clicked="OnAddCategoryClicked"
              BackgroundColor="#1da6ca"
              TextColor="White"
              CornerRadius="8"
              FontAttributes="Bold"
              HorizontalOptions="End"
              WidthRequest="180" />

            <CollectionView x:Name="CategoryView"
                      ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame class="" BorderColor="#ccc"
                         CornerRadius="8"
                         Margin="10,5"
                         Padding="10"
                         HasShadow="True"
                         BackgroundColor="#121212">
                            <SwipeView>
                                <SwipeView.LeftItems>
                                    <SwipeItems>
                                        <SwipeItem
                                            BackgroundColor="#121212"
                                              Text="Delete"
                                              IconImageSource="delete.png"
                                              Invoked="OnDeleteCategoryClicked"
                                              CommandParameter="{Binding .}" />
                                    </SwipeItems>
                                </SwipeView.LeftItems>
                                <HorizontalStackLayout >
                                    <Label Text="{Binding Code}"
                                        FontAttributes="Bold"
                                        FontSize="16"
                                        TextColor="GhostWhite"
                                        VerticalOptions="Center"
                                        />
                                    <Label Text="{Binding Name}"
                                            FontSize="16"
                                            TextColor="GhostWhite"
                                            Margin="20,0,-30,0"
                                            VerticalOptions="Center"/>
                                </HorizontalStackLayout>
                            </SwipeView>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>

    </ScrollView>
</ContentPage>