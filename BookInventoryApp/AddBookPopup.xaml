<toolkit:Popup
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
        x:Class="BookInventoryApp.AddBookPopup"
    CanBeDismissedByTappingOutsideOfPopup="True" Color="Black">

    <StackLayout BackgroundColor="Black" 
                 HorizontalOptions="Center" WidthRequest="250">
        <Entry Placeholder="Title" x:Name="TitleEntry" TextColor="White" />
        <Picker x:Name="TypeEntry" SelectedIndex="{Binding Type}" ItemsSource="{Binding }"></Picker>
        <Button Text="Save" Clicked="OnSaveClicked"/>
    </StackLayout>

</toolkit:Popup>
