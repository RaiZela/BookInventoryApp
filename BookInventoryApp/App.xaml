<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BookInventoryApp"
             x:Class="BookInventoryApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/Styles/DarkTheme.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="Entry">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Start" />
                <Setter Property="HorizontalOptions" Value="StartAndExpand" />
                <Setter Property="VerticalOptions" Value="FillAndExpand" />
                <Setter Property="FontAttributes" Value="None"/>
                <Setter Property="BackgroundColor" Value="#263238" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="PlaceholderColor" Value="DarkGray" />
                <Setter Property="WidthRequest" Value="250" />
                <Setter Property="FontSize" Value="18" />
            </Style>

            <Style TargetType="Picker">
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="VerticalTextAlignment" Value="Center" />
                <Setter Property="HorizontalTextAlignment" Value="Start" />
                <Setter Property="HorizontalOptions" Value="StartAndExpand" />
                <Setter Property="FontAttributes" Value="None"/>
                <Setter Property="HeightRequest" Value="45" />
                <Setter Property="BackgroundColor" Value="#263238" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="TitleColor" Value="DarkGray" />
                <Setter Property="WidthRequest" Value="250" />
            </Style>
            <Style TargetType="TitleBar">
                <Setter Property="ForegroundColor" Value="#90CAF9"></Setter>
                <Setter Property="HorizontalOptions" Value="Center"></Setter>
            </Style>

            <Style TargetType="Border">
                <Setter Property="Margin" Value="0,10,0,0"></Setter>
                <Setter Property="HorizontalOptions" Value="Start"></Setter>
                <Setter Property="Stroke" Value="Transparent"></Setter>
            </Style>

            <Style TargetType="RoundRectangle">
                <Setter Property="CornerRadius" Value="10"></Setter>
            </Style>

            <Style TargetType="VerticalStackLayout">
                <Setter Property="Padding" Value="20"></Setter>
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>
