<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="BookInventoryApp.MainPage"
             Title="Lilith's Library">

    <Grid>
        <Image
               Aspect="AspectFill"
               Opacity="0.5"
               IsEnabled="False">
            <Image.Source>
                <OnPlatform x:TypeArguments="ImageSource">
                    <On Platform="Android" Value="background_image_library.jpg" />
                    <On Platform="WinUI" Value="background_image_library.jpg" />
                </OnPlatform>
            </Image.Source>
        </Image>

        <StackLayout Padding="20">
            <Button Text="Add New Book"
                    Clicked="OnAddBookClicked"
                    HorizontalOptions="End" />
            <CollectionView x:Name="BooksView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="10">
                            <StackLayout>
                                <Label Text="{Binding Title}"
                                        FontSize="18"
                                        FontFamily="VictorMono-BoldItalic"></Label>
                                <Label Text="{Binding Authors}"  
                                       FontSize="18" 
                                       FontFamily="VictorMono-BoldItalic"
                                       TextColor="White" 
                                       BackgroundColor="Red" 
                                       IsVisible="True" Opacity="1" LineHeight="2"></Label>
                              
                            </StackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout Orientation="Horizontal">
                <Button Text="Previous"
           Clicked="OnAddBookClicked"
           HorizontalOptions="Start" />
                <Button Text="Next"
           Clicked="OnAddBookClicked"
           HorizontalOptions="End" />
            </StackLayout>
        </StackLayout>
    </Grid>
</ContentPage>
