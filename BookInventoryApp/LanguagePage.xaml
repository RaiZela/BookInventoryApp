<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookInventoryApp.LanguagePage"
             Title="LanguagePage">
    <StackLayout Padding="20">
        <Button Text="Add New Language" Clicked="OnAddLanguageClicked"/>
        <CollectionView x:Name="LanguageView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <HorizontalStackLayout  Padding="10">
                        <Label Text="{Binding Code}" FontAttributes="Bold" Padding="10"/>
                        <Label Text="{Binding Name}" FontAttributes="Bold" Padding="10"/>
                    </HorizontalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>