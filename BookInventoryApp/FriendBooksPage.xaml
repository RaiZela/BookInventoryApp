<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BookInventoryApp.FriendBooksPage"
             Title="FriendBooksPage">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">
            <!-- Actual Books -->
            <Label Text="Current Loans" FontSize="20" FontAttributes="Bold" />
            <CollectionView x:Name="CurrentBooksCollection" ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ccc" CornerRadius="8" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding BookTitle}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Author}" FontSize="16" />
                                <Label Text="{Binding DateBorrowed, StringFormat='Borrowed: {0:dd MMM yyyy}'}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Historical Books -->
            <Label Text="Returned Books" FontSize="20" FontAttributes="Bold" Margin="0,30,0,0" />
            <CollectionView x:Name="HistoricalBooksCollection" ItemsLayout="VerticalList">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ccc" CornerRadius="8" Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding BookTitle}" FontSize="18" FontAttributes="Bold" />
                                <Label Text="{Binding Author}" FontSize="16" />
                                <Label Text="{Binding DateBorrowed, StringFormat='Borrowed: {0:dd MMM yyyy}'}" FontSize="14" TextColor="Gray" />
                                <Label Text="{Binding DateReturned, StringFormat='Returned: {0:dd MMM yyyy}'}" FontSize="14" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>